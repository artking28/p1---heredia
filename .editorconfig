# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.{json,yml,yaml,toml,cson,xml,html}]
indent_size = 3

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[default.conf]
indent_size = 2
